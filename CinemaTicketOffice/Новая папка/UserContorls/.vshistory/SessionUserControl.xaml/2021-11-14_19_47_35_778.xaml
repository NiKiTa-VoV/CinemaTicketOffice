<UserControl x:Class="CinemaTicketOffice.UserContorls.SessionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaTicketOffice.UserContorls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  x:Name="mainGrid" MouseEnter="mainGrid_MouseEnter" MouseLeave="mainGrid_MouseLeave" MouseUp="mainGrid_MouseUp" MouseDown="mainGrid_MouseDown">
        <Border CornerRadius="8" Height="20" Width="48" Background="#E5FFF3DE" Margin="4">
            <TextBlock Text="{Binding Time}" Height="20" Width="48" TextAlignment="Center" IsHitTestVisible="False"></TextBlock>
        </Border>  
    </Grid>
</UserControl>
