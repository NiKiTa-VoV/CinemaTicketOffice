<UserControl x:Class="CinemaTicketOffice.UserContorls.CinemaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaTicketOffice.UserContorls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox x:Name="image" Margin="8">
            <Image Source="{Binding Image}" Stretch="Fill" VerticalAlignment="Stretch"></Image>
        </Viewbox>
        <TextBlock x:Name="tbTitle" Grid.Row="1" Text="{Binding Title}"></TextBlock>
    </Grid>
</UserControl>
