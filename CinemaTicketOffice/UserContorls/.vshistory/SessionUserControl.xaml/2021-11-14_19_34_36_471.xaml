<UserControl x:Class="CinemaTicketOffice.UserContorls.SessionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaTicketOffice.UserContorls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="8" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Wheat">
            <TextBlock Text="{Binding Time}" Height="20" Width="48"></TextBlock>
        </Border>  
    </Grid>
</UserControl>
